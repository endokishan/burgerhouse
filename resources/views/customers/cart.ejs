<section class="cart py-16">

    <!-- Checking If Cart is empty or not (JavaScript Part) -->
    <% if (session.cart) {%>

    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="burger-list">

            <!-- JavaScript Part -->
            <% for(let cartItem of Object.values(session.cart.items)) { %>

            <!-- Cart Items -->
            <div class="flex items-center my-3">
                <img class="w-24 rounded-lg shadow-xl" src="/img/<%= cartItem.item.image%>" alt="">
                <div class="ml-4 flex-1">
                    <h1 class="my-2"><%= cartItem.item.name%></h1>
                    <span class="text-xs">Price : â‚¹<%= cartItem.item.price%></span>
                    <p class="text-xs my-2 removeItem"><a  class="link" href="#"><i class="las la-trash"></i> Remove</a></p>
                </div>
                <span class="flex-1"><%= cartItem.qty%> Pcs</span>
                <span class="font-bold text-lg">â‚¹ <%= cartItem.qty * cartItem.item.price%></span>
            </div>

            <% } %>

        </div>
        <hr>
        <div class="text-right py-4">
            <!-- Total Amount -->
            <div>
                <span class="text-lg font-bold">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice%></span>
            </div>

            <% if (user) { %>

            <!-- Address and Mobile Number -->
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-gray-400 p-1 mb-4 w-1/2" type="tel"
                        placeholder="Phone Number">
                    <textarea name="address" class="border border-gray-400 p-2 w-1/2" type="text"
                        placeholder="Address"></textarea>
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order
                            Now</button>
                    </div>
                </form>
            </div>

            <% } else { %>

            <!-- Login to continue Button -->
            <a href="/login"
                class="inline-block btn-primary cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-6">Login
                to continue</a>

            <% } %>

        </div>


    </div>

    <!-- JavaScript Part -->
    <% } else { %>

    <!-- Empty Cart Page Section -->
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty ðŸ˜’</h1>
            <p class="text-gray-500 text-lg mb-12">Your Cart is Empty, You haven't orderd a Burger yet <br> To Order a
                Burger, Go to Home Page and Add your favourite Burger ðŸ˜‹</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </div>

    <% } %>


</section>